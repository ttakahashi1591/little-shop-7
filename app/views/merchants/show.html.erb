<h1 class='merchant_header'><%= @merchant.name %></h1>
<section class="merchant_links">
  <%= link_to "Your Items", "/merchants/#{@merchant.id}/items" %>
  <%= link_to "Your Invoices", "/merchants/#{@merchant.id}/invoices" %>
  <%= link_to "Bulk Discounts", "/merchants/#{@merchant.id}/bulk_discounts" %>
</section>
<h3>Favorite Customers:</h3>
<section class="fav_customers">
  <ul>
  <% @merchant.top_5_customers.each do |customer| %>
  <section class=<%= customer.first_name %>>
    <li>Customer:<%= customer.first_name %> <%= customer.last_name %> : Successful Transactions: <%= customer.success_count%></li>
  </section>
  <% end %>
  </ul>
</section>
<h3>Items Ready to ship</h3>
<section class="items_ready_to_ship">
  <% @merchant.items_ready_to_ship.each do |item| %>
    <p><strong>Item:</strong> <%= item.name %></p>
    <p><strong>Date Created:</strong> <%= item.ordered_on_date %></p> 
    <p><strong>Invoice:</strong> <%= link_to "#{item.invoice_id}", "/merchants/#{@merchant.id}/invoices/#{item.invoice_id}" %><br></p>
  <% end %>
</section>

